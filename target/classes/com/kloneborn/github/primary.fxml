<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<Scene stylesheets="@styles.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kloneborn.github.PrimaryController">
   <StackPane>
      <children>
         <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0" prefWidth="400.0" styleClass="application">
            <children>
               <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" styleClass="text-box">
                  <children>
                     <Label fx:id="title" text="Congradulations!">
                        <styleClass>
                           <String fx:value="title" />
                           <String fx:value="float-up" />
                        </styleClass>
                     </Label>
                     <Label text="Successfully created an executable JavaFX Application" wrapText="true">
                        <styleClass>
                           <String fx:value="subtitle" />
                           <String fx:value="float-up" />
                        </styleClass>
                     </Label>
                     <Button id="celebrate" mnemonicParsing="false" onAction="#onActionCelebrate" text="Celebrate" />
                  </children>
               </VBox>
            </children>
         </VBox>
         <Pane fx:id="particlePane" mouseTransparent="true" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: transparent;" />
      </children>
   </StackPane>
</Scene>
